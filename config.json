      "config": "normal",
      "alias": "nas1"
    },
    "nas-2": {
      "address": "192.168.1.62",
      "config": "normal",
      "alias": "nas2"
    },
    "nas-3": {
      "address": "192.168.1.63",
      "config": "normal",
      "alias": "nas3"
    },
    "ns-1": {
      "address": "192.168.1.71",
      "config": "ns1",
      "alias": "ns1"
    },
    "ns-2": {
      "address": "192.168.1.72",
      "config": "ns2",
      "alias": "ns2"
    },
    "nebula-1": {
      "address": "192.168.1.80"
    },
    "traefik-1": {
      "address": "192.168.1.81",
      "alias": "traefik",
      "aliases": [
        "sw1",
        "ck",
        "nas1",
        "nas2",
        "nas3",
        "ns1",
        "ns2",
        "or"
      ]
    },
    "or-1": {
      "address": "192.168.1.91",
      "config": "or",
      "alias": "or"
    },
    "knx-1": {
      "address": "192.168.1.100"
    }
  },
  "routers": {
    "normal": [
      "default-headers",
      "https-redirect"
    ],
    "ns1": [
      "default-headers",
      "https-redirect",
      "ns1-redirect"
    ],
    "ns2": [
      "default-headers",
      "https-redirect",
      "ns2-redirect"
    ],
    "or": [
      "default-headers",
      "https-redirect"
    ]
  },
  "services": {
    "normal": {
      "protocol": "https",
      "port": 443
    },
    "or": {
      "protocol": "http",
      "port": 8080
    }
  },
  "middlewares": {
    "https-redirect": {
      "type": "redirectScheme",
      "permanent": true,
      "rules": [
        {
          "tag": "scheme",
          "value": "https"
        }
      ]
    },
    "ns1-redirect": {
      "type": "redirectRegex",
      "permanent": true,
      "rules": [
        {
          "tag": "regex",
          "value": "^https://ns1.local.domain/?$"
        },
        {
          "tag": "replacement",
          "value": "https://ns1.local.domain/admin"
        }
      ]
    },
    "ns2-redirect": {
      "type": "redirectRegex",
      "permanent": true,
      "rules": [
        {
          "tag": "regex",
          "value": "^https://ns2.local.domain/?$"
        },
        {
          "tag": "replacement",
          "value": "https://ns2.local.domain/admin"
        }
      ]
    }
  },
  "gateway": "192.168.1.1",
  "mask": 24,
  "domain": "local.domain",
  "email": "admin@test.com",
  "token": "cloudflare-api-token"
}
